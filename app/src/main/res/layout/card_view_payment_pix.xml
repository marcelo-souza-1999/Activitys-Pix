<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewPayment"
        android:layout_width="@dimen/widht_card_view_body_pix"
        android:layout_height="@dimen/height_card_view_body_pix"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin_start_16"
        android:layout_marginTop="@dimen/margin_top_16"
        android:layout_marginEnd="@dimen/margin_end_16"
        android:layout_marginBottom="@dimen/margin_bottom_16"
        android:elevation="@dimen/elevation_50"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/radius_card_view_dados"
        app:cardElevation="@dimen/elevation_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_card_view_dados">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutPaymentPix"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageViewPaymentPix"
                    android:layout_width="@dimen/widht_60"
                    android:layout_height="@dimen/height_60"
                    android:layout_marginStart="@dimen/margin_start_16"
                    android:layout_marginTop="@dimen/margin_top_8"
                    android:layout_marginEnd="@dimen/margin_end_16"
                    android:importantForAccessibility="no"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/payment_rose_24" />

                <TextView
                    android:id="@+id/textViewPaymentPix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_24"
                    android:layout_marginTop="@dimen/margin_top_8"
                    android:layout_marginEnd="@dimen/margin_bottom_24"
                    android:text="@string/title_card_view_payment"
                    android:focusable="false"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewPaymentPix" />

            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>